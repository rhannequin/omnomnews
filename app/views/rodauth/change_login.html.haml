.mt-8.sm:mx-auto.sm:w-full.sm:max-w-md
  .bg-white.p-4.pb-8.px-4.shadow.sm:rounded-lg.sm:px-10
    = form_tag rodauth.change_login_path, method: :post do
      = render "login_field"
      - if rodauth.require_login_confirmation?
        = render "login_confirm_field"
      - if rodauth.change_login_requires_password?
        = render "password_field"
      = render "submit", value: t("rodauth.change_login.submit")
