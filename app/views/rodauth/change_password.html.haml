.mt-8.sm:mx-auto.sm:w-full.sm:max-w-md
  .bg-white.p-4.pb-8.px-4.shadow.sm:rounded-lg.sm:px-10
    = form_tag rodauth.change_password_path, method: :post do
      - if rodauth.change_password_requires_password?
        = render "password_field"
      = render "new_password_field"
      - if rodauth.require_password_confirmation?
        = render "password_confirm_field"
      = render "submit", value: t("rodauth.change_password.submit")
